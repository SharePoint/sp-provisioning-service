                      {
                          Text = t,
                          Value = t,
                          Selected = (Model.SelectedTheme == t)
                      }).ToList();
        themes.Insert(0, new SelectListItem
        {
            Text = "(Select a Theme)",
            Value = "********",
            Selected = String.IsNullOrEmpty(Model.SelectedTheme)
        });

        return (themes);
    }
}

